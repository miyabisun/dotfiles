#!/bin/bash
script_dir="$(cd "$(dirname "${BASH_SOURCE:-${(%):-%N}}")"; pwd)"
cd "$script_dir/../"

function link () {
  from="$(pwd)/$1"
  to="$HOME/$2"
  ln -sfv "$from" "$to"
}

link ".editorconfig" ""
link ".tmux.conf" ""

mkdir -p "$HOME/.vim"
link ".vim/config" ".vim"
link ".vim/vimrc" ".vim"

mkdir -p "$HOME/.config"
link "config/git" ".config"
link "config/nvim" ".config"
link "config/tmux" ".config"
link "config/.deepl.json" ".config"
