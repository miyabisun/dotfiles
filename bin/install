#!/bin/bash
script_dir="$(cd "$(dirname "${BASH_SOURCE:-${(%):-%N}}")"; pwd)"
cd "$script_dir/../"

for f in .??*
do
  [ "$f" == ".git" ] && continue
  [ "$f" == ".ssh" ] && continue
  [ "$f" == ".config" ] && continue
  [ "$f" == ".DS_Store" ] && continue
  ln -sfv "$(pwd)/$f" "$HOME"/"$f"
done

mkdir -p "$HOME"/.config/git/
ln -sfv "$(pwd)/.config/git/ignore" "$HOME"/.config/git/ignore
ln -sfv "$(pwd)/.config/git/config" "$HOME"/.config/git/config

mkdir -p "$HOME"/.config/tmux/
ln -sfv "$(pwd)/.config/tmux/tmux.conf" "$HOME"/.config/tmux/tmux.conf
ln -sfv "$(pwd)/.config/tmux/tmux.osx.conf" "$HOME"/.config/tmux/tmux.osx.conf
