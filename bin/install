#!/bin/bash
script_dir="$(cd "$(dirname "${BASH_SOURCE:-${(%):-%N}}")"; pwd)"
cd "$script_dir/../"

for f in .??*
do
  [ "$f" == ".git" ] && continue
  [ "$f" == ".ssh" ] && continue
  [ "$f" == ".config" ] && continue
  [ "$f" == ".DS_Store" ] && continue
  ln -sfv "$(pwd)/$f" "$HOME/$f"
done

for d in .config/??*
do
  mkdir -p "$HOME"/"$d"
  for f in "$d"/??*
  do
    ln -sfv "$(pwd)/$f" "$HOME/$f"
  done
done
