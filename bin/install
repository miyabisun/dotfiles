#!/bin/bash
script_dir="$(cd "$(dirname "${BASH_SOURCE:-${(%):-%N}}")"; pwd)"
cd "$script_dir/../"

for f in .??*
do
  [ "$f" == ".config" ] && continue
  [ "$f" == ".git" ] && continue
  [ "$f" == ".ssh" ] && continue
  [ "$f" == ".vim" ] && continue
  [ "$f" == ".DS_Store" ] && continue
  ln -sfv "$(pwd)/$f" "$HOME/$f"
done

for d in .config/??*
do
  ln -sfv "$(pwd)/$d" "$HOME/.config"
done

mkdir -p "$HOME/.vim"
ln -sfv "$(pwd)/.vim/config" "$HOME/.vim/config"
ln -sfv "$(pwd)/.vim/vimrc" "$HOME/.vim/vimrc"
