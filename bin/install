#!/bin/bash
script_dir="$(cd "$(dirname "${BASH_SOURCE:-${(%):-%N}}")"; pwd)"
cd "$script_dir/../"

files=(".editorconfig" ".tmux.conf")
for f in ${files[@]}
do
  ln -sfv "$(pwd)/$f" "$HOME/$f"
done

for d in config/??*
do
  ln -sfv "$(pwd)/$d" "$HOME/.config"
done

mkdir -p "$HOME/.vim"
ln -sfv "$(pwd)/.vim/config" "$HOME/.vim"
ln -sfv "$(pwd)/.vim/vimrc" "$HOME/.vim"
